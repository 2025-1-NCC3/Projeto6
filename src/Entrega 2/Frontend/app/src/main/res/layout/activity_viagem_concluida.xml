<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViagemConcluida">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEEDBACK"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <!-- Foto + nome -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/iconperson"
                android:contentDescription="Foto do motorista" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afonso da Cunha"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

            <!-- Estrelas fictícias -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <!-- 5 estrelas genéricas -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iconstar" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iconstar" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iconstar" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iconstar" />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/iconstar" />
            </LinearLayout>

            <!-- Endereços -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R. Lino Coutinho, 983 - Ipiranga, São Paulo\nSP: 04287-001"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parque da Independência - Ipiranga,\nSão Paulo - SP: 04263-000"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textSize="14sp" />

            <!-- Mini mapa -->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/banner_mapa_demo"
                android:contentDescription="Mapa da corrida" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURAÇÃO: 4BMIN"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <!-- Comentário -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Deixar comentário"
                android:gravity="top"
                android:layout_marginTop="8dp"
                android:background="#FFF" />

            <!-- Botões -->
            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#000000"
                android:onClick="voltarHome"
                android:text="ENVIAR"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnAgoraNao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#000000"
                android:onClick="voltarHome"
                android:text="agora não"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>